{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./backend/dist",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./backend/src"],
  "exclude": ["./backend/node_modules"]
}
